{
  "name": "@kazupon/jts-utils",
  "description": "Opinionated collection of JavaScript / TypeScript utils by @kazupon",
  "version": "0.0.0",
  "author": {
    "email": "kawakazu80@gmail.com",
    "name": "kazuya kawaguchi"
  },
  "license": "MIT",
  "funding": "https://github.com/sponsors/kazupon",
  "bugs": {
    "url": "https://github.com/kazupon/jts-utils/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazupon/jts-utils.git"
  },
  "keywords": ["javascript", "typescript", "utils", "utilities"],
  "homepage": "https://github.com/kazupon/jts-utils#readme",
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@9.7.1",
  "engines": {
    "node": ">= 18.18"
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "fix": "run-p \"fix:* {@}\" --",
    "fix:eslint": "eslint --flag unstable_ts_config . --fix",
    "fix:prettier": "prettier . --write",
    "lint": "run-p \"lint:* {@}\" --",
    "lint:eslint": "eslint --flag unstable_ts_config .",
    "lint:prettier": "prettier . --check",
    "test": "vitest",
    "typecheck": "tsc -p ."
  },
  "devDependencies": {
    "@kazupon/eslint-config": "^0.13.3",
    "@kazupon/prettier-config": "^0.1.1",
    "@types/node": "^22.5.0",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^50.2.2",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-regexp": "^2.6.0",
    "eslint-plugin-toml": "^0.11.1",
    "eslint-plugin-unicorn": "^55.0.0",
    "eslint-plugin-yml": "^1.14.0",
    "jiti": "^1.21.6",
    "lint-staged": "^15.2.9",
    "npm-run-all2": "^6.2.2",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0",
    "vitest": "^2.0.5"
  },
  "prettier": "@kazupon/prettier-config",
  "lint-staged": {
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "eslint --fix"
    ],
    "*.{js,mjs,cjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,jsonc,json5,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
